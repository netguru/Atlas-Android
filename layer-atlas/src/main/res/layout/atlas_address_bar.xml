<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.layer.atlas.util.views.MaxHeightScrollView
        android:id="@+id/selected_participant_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.layer.atlas.util.views.FlowLayout
            android:id="@+id/selected_participant_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.layer.atlas.util.views.EmptyDelEditText
                android:id="@+id/filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/atlas_edit_text_background"
                android:imeOptions="actionDone"
                android:maxLength="@integer/atlas_short_input_character_limit"
                android:minWidth="@dimen/atlas_participant_filter_min_width"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/atlas_edit_text_cursor"
                android:textSize="@dimen/atlas_text_size_input" />

        </com.layer.atlas.util.views.FlowLayout>
    </com.layer.atlas.util.views.MaxHeightScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/participant_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</merge>
